			document.addEventListener("onApplication", function(e) {
				var Application = e.detail.application;

				Application.config['selectedTotalCount'] = {$cardsOnPage};
				// Application.config['selectedTotalCount'] = 4;
				Application.config['pairIndexNames'] = {$gtmCardIndexNames};
				Application.config['pairNames'] = {$gtmCardNames};
				Application.config['gtmBenefitNames'] = {$gtmBenefitNames};
				Application.config['gtmBenefitDescriptions'] = {$gtmBenefitDescriptions};
			});

		})(window);
	</script>

{/block}

